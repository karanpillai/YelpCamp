<%- include("partials/header") %>

<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1>This is our campground page </h1>
				<p>View our campground from all over the sites....</p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">ADD CAMPGROUNDS</a>
			</div>
		</header>

		<div class="row text-center" style="display:flex;flex-wrap:wrap;">
			<% campground.forEach(function(camp){ %>
			<div class="col-md-6 col-sm-6" >
				<div class="card">
					<div class="card-body">
						<img src="<%= camp.image %> ">
					</div>
					<div class="card-footer">
						<h4><%= camp["name"] %></h4>
						
					</div>
					<p><a href="/campgrounds/<%= camp._id %>" class="btn btn-lg btn-primary">More Info</a></p>
				</div>
						
			</div>
	 
			<% }) %>	
		</div>
</div>

<%- include("partials/footer") %>
