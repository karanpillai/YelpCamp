<%- include("partials/header") %>
<style>
	.content{
		margin:auto;
		padding-top:15px;
	}
	body{
		background:url("https://images.unsplash.com/photo-1528459061998-56fd57ad86e3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60");
	background-size: cover;
	background-position: center;
	font-family: Lato;
		}
</style>
<div class="container">
	<div class="jumbotron">
	
		<h2 style="text-align:center;margin-top:10px;">FILL IN THE DETAILS TO MAKE CAMPGROUND</h2>
	</div>
	<div class="row">
		
		<div class="col-md-6 content">
			<form action="/campgrounds" method="POST">

				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="campground name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description"
					placeholder="Description">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="price for campground" min="0" step="50">
				</div>
				<div class="form-group">
					<input class="btn btn-md btn-danger btn-block" type="submit">
				</div>	
			</form>
			<a class="btn btn-sm btn-success" href="/campgrounds">Go Back</a>
		</div>
	</div>

	
</div>
<%- include("partials/footer") %>